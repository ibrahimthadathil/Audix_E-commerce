
    <header class="header">
       
        <div class="header-middle sticky-header">
            <div class="container">
                <div class="header-left">
                    <button class="mobile-menu-toggler">
                        <span class="sr-only">Toggle mobile menu</span>
                        <i class="icon-bars"></i>
                    </button>

                   

                    <nav class="main-nav">
                        <ul class="menu sf-arrows">

                            <a href="/" class="logo">
                                <img src="/assets/images/new/icons8-J.png" alt="Audix Logo" width="70" height="18" style="padding-right: 20px;">
                            </a>

                            <li class="megamenu-container active">
                                <a href="/">Home</a>

                                
                            </li>
                            <li>
                                <a href="/products" class="sf-with-ul">Category &nbsp; &nbsp;</a>
                                
                                <ul style=" padding-right: 0; "> 

                                    <% listedCategory.forEach(value => { %>
                                    
                                        <li><a href="/category/<%= value.name %>"><%= value.name %></a></li>
                                        
                                 <%  }); %>
    
                                    
                                </ul>
    
                              
                            </li>
                            <li>
                                <a href="/products" class="">Products</a>

                                
                            </li>
                            <li>
                                <a href="/contact">Contact</a>

                            </li>
                            <li>
                                <a href="/About" class="">About</a>

                               
                            </li>
                            
                        </ul><!-- End .menu -->
                    </nav><!-- End .main-nav -->
                </div><!-- End .header-left -->

                <div class="header-right">
                    
                    <ul>
                        <li>
                            <br>
                            <a class="" href="<%= locals.login ? '/profile' : '/login' %>" style="padding-right: 20px;color: #000000;margin-top: 10px;">
                                <% if (locals.login) { %>
                                    <div class="user-icon-container mt-2 ">
                                        <img style="width: 40%;padding-bottom: 25px;" src="/assets/images/new/user.png" alt="User" class="user-icon">
                                       
                                            
                                           
                                    </div>
                                <% } else { %>
                                    Login
                                <% } %>
                            </a>
                        </li>
                    </ul>
                    
                    
                    <div class="header-search">
                        <a href="#" class="search-toggle" role="button" title="Search"><i class="icon-search"></i></a>
                        <form action="#" method="get">
                            <div class="header-search-wrapper">
                                <label for="q" class="sr-only">Search</label>
                                <input type="search" class="form-control" oninput="search(this)" name="q" id="q" placeholder="Search in..." required>
                            </div><!-- End .header-search-wrapper -->
                        </form>
                    </div><!-- End .header-search -->
                    
                        
                  
                    <a href="/wishlist" class="wishlist-link">
                        <i class="icon-heart-o"></i>
                    </a>
                    <div class="dropdown cart-dropdown">
                        <a href="/cart" class="dropdown-toggle" role="button"  aria-expanded="false" data-display="static">
                            <i class="icon-shopping-cart"></i>
                            <span id="cart" class="cart-count"></span>
                        </a>

                       
                    </div><!-- End .cart-dropdown -->
                    
                </div><!-- End .header-right -->
            </div><!-- End .container -->
        </div><!-- End .header-middle -->
    </header><!-- End .header -->

   <script>
    cartCount();

    function cartCount(){

    const cartt = document.getElementById('cart');

    fetch('/cartCount' ,{method : 'post'}).then(res=>res.json()).then((data)=>{

        cartt.textContent = data.success || 0

    });

    }

   </script>

   
